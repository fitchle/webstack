{
  "name": "@stackfitch/db",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "db:setup": "ts-node setup.ts && edgedb project init --link --server-instance=db_remote && edgedb configure set listen_addresses 127.0.0.1 ::1",
    "db:generate": "npx @edgedb/generate edgeql-js",
    "db:migrate": "edgedb migrate && pnpm generate",
    "db:push": "edgedb migration create --non-interactive --allow-unsafe && pnpm db:migrate"
  },
  "devDependencies": {
    "@edgedb/generate": "^0.3.0",
    "@stackfitch/tsconfig": "workspace:*",
    "@stackfitch/db-config": "workspace:*",
    "@types/node": "^17.0.12",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "edgedb": "^1.3.2",
    "shell-exec": "^1.1.2"
  },
  "browser": {
    "child_process": false
  }
}
