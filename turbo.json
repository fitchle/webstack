{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["^dev", "storybook"]
    },
    "db:push": {
      "dependsOn": ["^db:push"]
    },
    "setup": {
      "dependsOn": ["^db:setup"]
    },
    "db:setup": {
      "dependsOn": ["^db:setup"]
    },
    "db:generate": {
      "dependsOn": ["^db:generate"]
    }
  }
}
